{
  "id": "com.ketra.point",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Minut point"
  },
  "description": {
    "en": "Adds support for Minut Point devices"
  },
  "category": [
    "security"
  ],
  "flow": {
    "triggers": [
      {
        "id": "Generic_alarm",
        "title": {
          "en": "A generic alarm Triggered."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "alarm_heard",
        "title": {
          "en": "An alarm was heard."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "short_button_press",
        "title": {
          "en": "Button was pressed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      }

    ]
  },
    "drivers": [
      {
        "id": "Point",
        "name": "Minut Point",
        "class": "sensor",
        "capabilities": [
          "measure_temperature",
          "measure_humidity",
          "measure_noise",
          "measure_pressure",
          "alarm_generic"
        ],
        "pair": [
          {
            "id": "login_oauth2",
            "template": "login_oauth2"
          },
          {
            "id": "list_devices",
            "template": "list_devices_singular",
            "navigation": {
              "next": "add_devices"
            }
          },
          {
            "id": "add_devices",
            "template": "add_devices"
          }
        ]
      }
    ],
    "permissions": [],
    "images": {
      "large": "/assets/images/large.png",
      "small": "/assets/images/small.png"
    },
    "author": {
      "name": "kevin traa",
      "email": "ketra90@gmail.com"
    }
  }